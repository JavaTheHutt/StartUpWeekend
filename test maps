<script>

      function initMap() {
        var myLatLng = {lat: 39.697530, lng: -84.308977};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 10,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: {lat: 39.697530, lng: -84.308977},
          map: map,
          title: 'Learning Tree Farm'
        });

      }
    </script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBR5Jdou6q0mb-91h2k8XwdTF4Mv5WJo7g&callback=initMap">
